@model LoginViewModel
@{
    ViewBag.Title = PageNameDefaults.Login.WithDomain();
}

<div class="d-flex justify-content-center mt-5">
    <div class="card col-12 col-md-7 col-lg-6 px-4">
        <div class="card-header">
            <h2>Авторизация</h2>
        </div>
        @using (Html.BeginForm("Login", "Account", new {ReturlUrl = @Model.ReturnUrl}, FormMethod.Post, true, new { }))
        {
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, null, new {@class = "text-input form-control", @placeholder = "Email"})
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new {@class = "text-input form-control", @placeholder = "Пароль" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.RememberMe, new {@class = "ml-2"})
                @Html.CheckBoxFor(x => x.RememberMe, new {@class = ""})
            </div>

            <input class="btn btn-turquoise w-100" type="submit" value="Войти" />
        }
    </div>
</div>
