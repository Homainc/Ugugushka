@model AdminAddCategoryViewModel


<section class="card my-5">
        <div class="card-header">
            <h1>@ViewBag.ActionTitle</h1>
        </div>
    @using (Html.BeginForm("AddCategory", "Admin", new { }, FormMethod.Post, true, new { }))
    {
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                @Html.LabelFor(x => x.Name, null, new { @class = "d-block mb-3" })
                @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control text-input" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.PartitionId, null, new { @class = "d-block mb-3" })
                <div class="select-wrapper">
                    @Html.DropDownListFor(x => x.PartitionId, ViewBag.PartitionsList as SelectList, "Не выбран", new { @class = "form-control primary-select" })
                </div>
                @Html.ValidationMessageFor(x => x.PartitionId)
            </div>
            <input type="submit" class="btn btn-turquoise mr-2" value="Сохранить" />
            @Html.ActionLink("Назад", "Categories", null, htmlAttributes: new { @class = "btn btn-secondary" })
    }
</section>