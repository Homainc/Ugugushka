@model CartIndexViewModel
@{
    ViewBag.Title = "Корзина";
}

<div>
    <table>
        <thead>
        <tr>
            <th>Кол-во</th>
            <th>Товар</th>
            <th>Цена</th>
            <th>Сумма</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Quantity</td>
                <td>@line.Toy.Name</td>
                <td>@line.Toy.Price</td>
                <td>@((line.Quantity * line.Toy.Price).ToString("C"))</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Итого:</td>
            <td>@Model.Cart.ComputeTotalValue().ToString("C")</td>
        </tr>
        </tfoot>
    </table>
    
    <div>
        <a href="@Model.ReturnUrl">Продолжить покупки</a>
    </div>
</div>

