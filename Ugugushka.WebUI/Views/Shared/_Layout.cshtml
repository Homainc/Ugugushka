<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
<header>
    <div class="container">
        <div class="d-flex py-4 row align-items-center justify-content-between">
            <div class="d-flex">
                <img src="~/img/logo_purple.png" height="90" width="90" alt="Угугушка"/>
                <div class="ml-3 align-self-center">
                    <h1 class="logo-text">Угугушка</h1>
                    <h2 class="logo-subtext">Интернет-магазин игрушек</h2>
                </div>
            </div>
            <div class="d-flex search-block">
                <input class="text-input" type="text" placeholder="Найти игрушки"/>
                <button class="btn search-btn" type="submit"><i class="fas fa-search"></i></button>
            </div>
            <div class="d-flex col-2 ml-2">
                <a class="btn btn-primary mr-2" href="#">Войти</a>
                <a class="btn btn-primary" href="#">Регистрация</a>
            </div>
        </div>
    </div>
    <div class="menu">
        <div class="container-lg d-flex">
            <a href="#">Главная</a>
            <a href="#">Каталог</a>
            <a href="#">Контакты</a>
        </div>
    </div>
</header>

<main class="container">
    @RenderBody()
</main>

<footer>

</footer>

</body>
</html>
