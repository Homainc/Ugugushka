<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/bundle.min.css" />
    @await RenderSectionAsync("Css", false)

</head>
<body>
<header>
    <div class="container-lg container-xl">
        <div class="row py-4 align-items-center justify-content-between">
            <div class="col-3 col-sm-3 col-md-4 col-lg-4 col-xl-4 d-flex">
                <img src="~/img/green_logo.png" height="90" width="90" alt="Угугушка" />
                <div class="ml-3 align-self-center d-none d-sm-none d-md-block d-lg-block d-xl-block">
                    <h1 class="logo-text">Ugugushka.by</h1>
                    <h2 class="logo-subtext">Интернет-магазин игрушек</h2>
                </div>
            </div>
            <div class="col-4 col-sm-4 col-md-3 col-lg-3 col-xl-3 d-flex search-block">
                <input class="col-9 text-input-bl" type="text" placeholder="Найти игрушки" />
                <button class="col-3 btn search-btn" type="submit"><i class="fas fa-search"></i></button>
            </div>
            <div class="col-4 d-flex ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    @using (Html.BeginForm("Logout","Account", new { ReturnUrl = Context.Request.Path }))
                    {
                            
                        <input type="submit" class="btn btn-primary mr-2" value="Выйти"/>
                    }
                }
                else
                {
                    <a class="btn btn-primary mr-2" href="@Url.Action("Login", "Account")">Войти</a>
                }

                @await Component.InvokeAsync("CartButton")
            </div>
        </div>
    </div>
    <div class="menu">
        <div class="container-lg d-flex">
            <a href="@Url.Action("Index", "Home")">Каталог</a>
            <a href="#">Контакты</a>
            @if(User.IsInRole(RoleDefaults.Admin)){
                <a href="@Url.Action("Toys", "Admin")">Управление</a>
            }
        </div>
    </div>
</header>

<main class="container-lg container-xl h-100">
    @RenderBody()
</main>

<footer>
</footer>
@await RenderSectionAsync("PageScripts", false)
</body>
</html>