@model AddToyViewModel
@{
    ViewBag.Title = "Управление - Добавить товар";
}

<div class="mt-5">
    <h2>Добавить товар</h2>
    @using (Html.BeginForm("AddToy", "Toy", FormMethod.Post, htmlAttributes: new {@enctype = "multipart/form-data", @id = "form"}))
    {
        @Html.HiddenFor(x => x.Id)
        @foreach (var property in ViewData.ModelMetadata.Properties)
        {
            if (property.PropertyName != "Id" && property.PropertyName != "ImageUrls")
            {
                <div class="form-group">
                    <label class="d-block mb-3" for="@property.PropertyName">@(property.DisplayName ?? property.PropertyName)</label>
                    @if (property.PropertyName == "Description")
                    {
                        @Html.TextArea(property.PropertyName, null, new {rows = 5, @class = "form-control text-input", @placeholder = property.DisplayName})
                    }
                    else if (property.PropertyName == "IsOnStock")
                    {
                        @Html.CheckBox(property.PropertyName)
                    }
                    else
                    {
                        @Html.TextBox(property.PropertyName, null, htmlAttributes: new {@class = "form-control text-input", @placeholder = property.DisplayName})
                    }
                    @Html.ValidationMessage(property.PropertyName)
                </div>
            }
        }

        <div class="form-group">
            <label class="d-block mb-3">Фотографии</label>
            <div id="images">
                @foreach (var url in Model.ImageUrls)
                {
                    <img src="@url" class="load-preview" height="100" width="100"/>
                }
            </div>
            <input type="file" name="image" id="image"/>
            <p id="result"></p>
            <button id="upload" class="btn btn-primary" type="button">Загрузить</button>
        </div>

        <input type="submit" class="btn btn-primary" value="Сохранить"/>
        @Html.ActionLink("Назад", "Toys", null, htmlAttributes: new {@class = "btn btn-primary"})

        @foreach (var url in Model.ImageUrls)
        {
            <input type="hidden" id="ImageUrls" name="ImageUrls" value="@url"/>
        }
    }
</div>

@section PageScripts
{
    <script src="~/libs/jquery/jquery.min.js" type="text/javascript"></script>
    <script>
        $("#upload").on("click",
            function(e) {
                uploadImage();
            });

        function deleteImage(e) {
            console.log(e);
            $(`input[value="${e.target.src}"`).remove();
            e.target.remove();
        }

        $('img.load-preview').on('click', deleteImage);

        function uploadImage() {
            var files = $("#image")[0].files;
            if (files) {
                const form = new FormData();
                form.append("image", files[0]);

                $("#result").html("loading");

                fetch('@Url.Action("UploadImages", "Image")',
                    {
                        method: 'POST',
                        body: form
                    }).then(r => {
                    r.json().then(r => {
                        console.log(r.secureUrl);
                        $("#result").html(r.secureUrl);
                        const el = $("<img class='load-preview' height='100' width='100'/>").attr('src', r.secureUrl).on('click', deleteImage);
                        const inp = $("<input type='hidden' name='ImageUrls' id='ImageUrls'/>").val(r.secureUrl);
                        $("#images").append(el);
                        $('#form').append(inp);
                    });
                });
            }
        }
    </script>
}
